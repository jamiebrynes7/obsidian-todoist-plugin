{
  "include": ["src/**/*", "./vitest-setup.ts"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2017",
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true
  }
}
